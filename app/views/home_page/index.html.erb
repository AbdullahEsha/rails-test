<div class="bg-gray-100 min-h-screen">
  <nav>
    <ul>
      <li><%= link_to "English", url_for(locale: :en) %></li>
      <li><%= link_to "EspaÃ±ol", url_for(locale: :es) %></li>
    </ul>
  </nav>
  <!-- HeroSection -->
  <section class="py-24 bg-cover bg-center" style="background-image: url('https://via.placeholder.com/1600x900');">
    <div class="container mx-auto text-white text-center px-4 sm:px-8 lg:px-16 xl:px-32">
      <h1 class="text-4xl font-bold mb-4"><%= t('home.hero.title') %></h1>
      <p class="text-xl mb-8"><%= t('home.hero.description') %></p>
    </div>
  </section>

  <!-- FeaturedProducts -->
  <section class="py-16">
    <div class="container mx-auto text-center px-4 sm:px-8 lg:px-16 xl:px-32">
      <h2 class="text-3xl font-bold mb-8"><%= t('home.featured.title') %></h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @featured_products.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden group">
            <img src="https://via.placeholder.com/300x200" alt="<%= product.name %>" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
            <div class="p-4">
              <h3 class="text-xl font-bold mb-2"><%= product.name %></h3>
              <p class="text-gray-700 mb-4"><%= truncate(product.description, length: 100) %></p>
              <p class="text-lg text-blue-500 font-semibold">$<%= number_with_precision(product.price, precision: 2) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- PromotionBanner -->
  <section class="py-16 bg-blue-500 text-white">
    <div class="container mx-auto text-center px-4 sm:px-8 lg:px-16 xl:px-32">
      <h2 class="text-3xl font-bold mb-4"><%= @promotion_banner[:title] %></h2>
      <p class="text-xl mb-8"><%= @promotion_banner[:description] %></p>
      <a href="#" class="bg-white text-blue-500 px-6 py-3 rounded-full inline-block hover:bg-blue-100 transition-colors duration-300">
        <%= t('home.promotion.cta') %>
      </a>
    </div>
  </section>
</div>